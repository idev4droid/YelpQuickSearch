<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/businessDetailImageViewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:id="@+id/businessDetailBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/normal_spacing"
            android:src="@drawable/ic_baseline_arrow_back_24px"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/businessDetailLargeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/extra_large_text"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:layout_marginStart="@dimen/medium_spacing"
            android:layout_marginEnd="@dimen/medium_spacing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/businessDetailViewPagerIndicator"
            tools:text='Schwartz'/>

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/businessDetailViewPagerIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_spacing"
            app:dampingRatio="0.5"
            app:dotsStrokeColor="@color/primaryColor"
            app:selectedDotColor="@color/primaryColor"
            app:dotsSize="8dp"
            app:dotsSpacing="6dp"
            app:dotsStrokeWidth="1dp"
            app:stiffness="300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/businessDetailImageViewPager"
    />

    <TextView
            android:id="@+id/businessDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/large_text"
            android:layout_marginTop="@dimen/medium_spacing"
            android:layout_marginEnd="@dimen/normal_spacing"
            android:layout_marginStart="@dimen/medium_spacing"
            tools:text="Schwartz"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/businessDetailImageViewPager"/>

    <TextView
            android:id="@+id/businessDetailRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text"
            android:layout_marginEnd="@dimen/normal_spacing"
            android:layout_marginStart="@dimen/medium_spacing"
            tools:text="4.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/businessDetailName"/>

    <ImageView
            android:id="@+id/businessDetailRatingStarImage"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="@dimen/small_spacing"
            android:src="@drawable/ic_baseline_stars_black_24px"
            app:layout_constraintStart_toEndOf="@id/businessDetailRating"
            app:layout_constraintTop_toTopOf="@id/businessDetailRating"
            app:layout_constraintBottom_toBottomOf="@id/businessDetailRating"/>

    <TextView
            android:id="@+id/businessDetailReviews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text"
            android:layout_marginStart="@dimen/small_spacing"
            tools:text="(400)"
            app:layout_constraintStart_toEndOf="@id/businessDetailRatingStarImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/businessDetailRating"/>

    <TextView
            android:id="@+id/businessDetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_spacing"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/businessDetailReviews"
            tools:text="$$"/>

    <TextView
            android:id="@+id/businessCategoriesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_spacing"
            android:layout_marginEnd="@dimen/medium_spacing"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text"
            android:text="@string/categories"
            android:layout_marginTop="@dimen/normal_spacing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/businessDetailPrice"/>

    <TextView
            android:id="@+id/businessCategories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_spacing"
            android:layout_marginEnd="@dimen/medium_spacing"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/businessCategoriesTitle"
            tools:text="Indian, Pizza"/>

    <TextView
            android:id="@+id/businessAddressTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_spacing"
            android:layout_marginEnd="@dimen/medium_spacing"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text"
            android:text="@string/address"
            android:layout_marginTop="@dimen/normal_spacing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/businessCategories"/>

    <TextView
            android:id="@+id/businessAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_spacing"
            android:layout_marginEnd="@dimen/medium_spacing"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/businessAddressTitle"
            tools:text="1 Ferry Bldg, Shop 11, San Francisco, CA 94111"/>

    <View
            android:id="@+id/businessLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/medium_spacing"
            android:background="#20000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/businessAddress"/>

    <ImageButton
            android:id="@+id/businessCallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_spacing"
            android:padding="@dimen/normal_spacing"
            android:src="@drawable/ic_baseline_phone_24px"
            android:background="@drawable/round_dark_layout_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/businessWebsiteButton"
            app:layout_constraintTop_toBottomOf="@id/businessLine"/>

    <TextView
            android:id="@+id/businessCallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/call"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text"
            app:layout_constraintStart_toStartOf="@id/businessCallButton"
            app:layout_constraintEnd_toEndOf="@id/businessCallButton"
            app:layout_constraintTop_toBottomOf="@id/businessCallButton"/>

    <ImageButton
            android:id="@+id/businessWebsiteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_spacing"
            android:padding="@dimen/normal_spacing"
            android:src="@drawable/ic_baseline_web_24px"
            android:background="@drawable/round_dark_layout_background"
            app:layout_constraintStart_toEndOf="@id/businessCallButton"
            app:layout_constraintEnd_toStartOf="@id/businessShareButton"
            app:layout_constraintTop_toBottomOf="@id/businessLine"/>

    <TextView
            android:id="@+id/businessWebsiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/website"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text"
            app:layout_constraintStart_toStartOf="@id/businessWebsiteButton"
            app:layout_constraintEnd_toEndOf="@id/businessWebsiteButton"
            app:layout_constraintTop_toBottomOf="@id/businessWebsiteButton"/>

    <ImageButton
            android:id="@+id/businessShareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_spacing"
            android:padding="@dimen/normal_spacing"
            android:src="@drawable/ic_baseline_share_24px"
            android:background="@drawable/round_dark_layout_background"
            app:layout_constraintStart_toEndOf="@id/businessWebsiteButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/businessLine"/>

    <TextView
            android:id="@+id/businessShareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text"
            app:layout_constraintStart_toStartOf="@id/businessShareButton"
            app:layout_constraintEnd_toEndOf="@id/businessShareButton"
            app:layout_constraintTop_toBottomOf="@id/businessShareButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>